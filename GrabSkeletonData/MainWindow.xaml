<Window x:Class="DTWGestureRecognition.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KinectDTW" Height="720" Width="1280" Loaded="WindowLoaded" Closed="WindowClosed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="300" />
            <RowDefinition Height="300"/>
            <RowDefinition Height="173" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="680" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3">
            <Label Height="80" Content="TaiChi Happy Learning" FontSize="36" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Width="600" FontStretch="SemiExpanded" FontStyle="Normal" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" FontFamily="Segoe UI"></Label>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1">
            <Button x:Name="dtwCapture" Content="Capture" Click="DtwCaptureClick" Width="200 "/>
            <Button x:Name="dtwStore" Content="Store" IsEnabled="False" Click="DtwStoreClick" Width="200" />
            <Button x:Name="dtwReplay" Content="Replay" Click="DtwReplayClick" Width="200" IsEnabled="True" Margin="0,0,1,0" />
            <Button x:Name="dtwStopReplay" Content="Stop Replay" Click="DtwStopReplayClick" Width="200" IsEnabled="False" Margin="0,0,1,0" />
            <Button x:Name="dtwStartRegcon" Content="Start Learning" Click="DtwStartRecogn" Width="200" IsEnabled="True" Margin="0,0,1,0" />
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Width="400">
            <ComboBox Name="gestureList" Width="400">
                <ComboBoxItem IsSelected="True">@1stMotion</ComboBoxItem>
                <ComboBoxItem>@2ndMotion</ComboBoxItem>
                <ComboBoxItem>@3rdMotion</ComboBoxItem>
                <ComboBoxItem>@4thMotion</ComboBoxItem>
            </ComboBox>
            <TextBox FontSize="14" Name="results" Margin="0,0,0,0" Focusable="False" BorderThickness="0" Text="" TextAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="20" />
            <TextBox FontSize="14" Name="status" Margin="0,0,0,0" Focusable="False" BorderThickness="0" Text="" TextAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="20" />
            <TextBox FontSize="14" Name="status2" Margin="0,0,0,0" Focusable="False" BorderThickness="0" Text="" TextAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="20" />
            <TextBox FontSize="14" Name="currentBufferFrame" Margin="0,0,0,0" Focusable="False" BorderThickness="0" Text="" TextAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="20" />
            <TextBox FontSize="14" Name="frameRate" Margin="0,0,0,0" Focusable="False" BorderThickness="0" Text="" TextAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="20" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="1" VerticalAlignment="Top" Grid.RowSpan="1" Height="300">
            <Canvas Width="400" Height="300" x:Name="skeletonCanvas" Background="Black" ClipToBounds="True" Margin="0,0,0,0" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="2" VerticalAlignment="Top" Grid.RowSpan="1" Height="300">
            <Canvas Width="400" Height="300" x:Name="skeletonCanvas2" Background="Black" ClipToBounds="True" Margin="0,0,0,0" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" Grid.RowSpan="1" Height="300">
            <Image Width="200" Height="150" x:Name="videoImage" Margin="0,75" RenderTransformOrigin="0.475,0.5" />
            <Image Width="200" Height="150" x:Name="videoImage2" Margin="0,75" RenderTransformOrigin="0.475,0.5" />
        </StackPanel>

        <TextBox Grid.Column="0" Grid.Row="2" FontSize="11" Name="dtwTextOutput" Margin="0,0,0,0" Focusable="True" BorderThickness="0" Text="" TextAlignment="Left" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="230" VerticalScrollBarVisibility="Auto" IsReadOnly="True" />
    </Grid>
</Window>
